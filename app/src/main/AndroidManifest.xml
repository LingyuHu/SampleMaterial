<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vincent.samplematerial" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vincent.samplematerial.MainActivity" />
        </activity>
        <activity
            android:name=".CardViewActivity"
            android:label="@string/title_activity_card_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vincent.samplematerial.MainActivity" />
        </activity>
        <activity
            android:name=".RipplesActivity"
            android:label="@string/title_activity_ripples"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vincent.samplematerial.MainActivity" />
        </activity>
        <activity
            android:name=".ZActivity"
            android:label="@string/title_activity_z" >
        </activity>
    </application>

</manifest>
